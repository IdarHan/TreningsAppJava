<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ex1NameEditText2"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="1dp"
        android:hint="Exercise 1" />

    <EditText
        android:id="@+id/ex1WeightEditText2"
        android:layout_width="73dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/ex1NameEditText2"
        android:layout_alignBottom="@+id/ex1NameEditText2"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-13dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/ex1NameEditText2"
        android:autofillHints=""
        android:ems="5"
        android:gravity="center_horizontal"
        android:hint="0"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ex1RepsEditText2"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_alignTop="@+id/ex1SetsEditText2"
        android:layout_alignBottom="@+id/ex1SetsEditText2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="0dp"
        android:autofillHints=""
        android:ems="5"
        android:gravity="center_horizontal"
        android:hint="0"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ex1SetsEditText2"
        android:layout_width="79dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/ex1WeightEditText2"
        android:layout_alignBottom="@+id/ex1WeightEditText2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/ex1WeightEditText2"
        android:autofillHints=""
        android:ems="5"
        android:gravity="center_horizontal"
        android:hint="0"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="18sp" />

</RelativeLayout>